<% if @post %>
  <h1><%= @post.subject %></h1>

  </br>

  <% if @post.main_image %>
    <div><%= image_tag(@post.main_image.url) %></div>
  <% end %>

  </br>

  <div><%= @post.main_body %></div>

  <h2>Comments</h2>

    <%= render :partial => @post.comments %>
_____________________________________________
  <%= form_for [@post, Comment.new] do |f| %>
    <p>
    <%= f.label :Author %><br/>
    <%= f.text_field :author %>
    </p>
    <p>
    <%= f.label :body, "New comment" %><br/>
    <%= f.text_area :body %>
    </p>
    <p><%= f.submit "Add comment" %></p>
  <% end %>
<% end %>
