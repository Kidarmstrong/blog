# Hacky way to get columns to go across instead of down
# Will need refactor
<div id="wrapper">
  <div id="columns">
    <% posts.each_with_index do |post, index| %>
      <% if index.even? %>
        <div class="pin">
          <%= link_to(post) do %>
            <h4><b><%= post.subject %></b></h4>
            <%= image_tag(post.main_image.index_pin.url) %>
            <p>
              <%= truncate(strip_tags(post.caption), length: 200, seperator: ' ') %>
            </p>
          <% end %>
        </div>
      <% end %>
    <% end %>
    <% posts.each_with_index do |post, index| %>
      <% if index.odd? %>
        <div class="pin">
          <%= link_to(post) do %>
            <h4><b><%= post.subject %></b></h4>
            <%= image_tag(post.main_image.index_pin.url) %>
            <p>
              <%= truncate(strip_tags(post.caption), length: 200, seperator: ' ') %>
            </p>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
