<div class="container marketing">
  <div class="row">
  <% posts.each do |post| %>
    <div class="col-lg-4">
      <%= image_tag(post.main_image.circle.url, class: 'img-rounded') %>
      <h2><%= post.subject %></h2>
      <p><%= raw post.main_body %></p>
      <p><a class="btn btn-default" href="#">View details &raquo;</a></p>
    </div><!-- /.col-lg-4 -->
    <% end %>
  </div><!-- /.row -->
</div><!-- /.container -->
