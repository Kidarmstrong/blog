<div class='container' >
<%= form_for(@post, :html => {:multipart => true}) do |f| %>

  <div>
    <%= f.label :subject %> </br>
    <%= f.text_field :subject %>
  </div>

  </br>      

  <div>
    <%= f.label :main_article %> </br>
    <%= f.check_box :main_article %>
  </div>

  </br>      

  <div>
    <%= f.label :show_on_main_page %> </br>
    <%= f.check_box :show_on_main_page %>
  </div>

  </br>      

  <div>
    <%= f.label :caption %></br>
    <%= f.text_area :caption %>
  </div>

  </br>      

  <div>
    <%= f.label :main_body %></br>
    <%= f.cktext_area :main_body, :ckeditor => { :width => '50%' } %>
  </div>

  </br>

  <div>
    <%= f.label :main_image %></br>
    <%= f.file_field :main_image %>
    <%= f.hidden_field :main_image_cache %>
  </div>

  </br>      

  <div>
    <%= f.submit "Create Post", class: "btn btn-large btn-primary" %>
  </div>

<% end %>
</div>
