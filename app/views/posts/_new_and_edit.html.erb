<div class='container' >
<%= form_for(@post, :html => {:multipart => true}) do |f| %>

  <div>
    <%= f.label :subject %> </br>
    <%= f.text_field :subject %>
  </div>

  </br>      

  <div>
    <%= f.label :starred %> </br>
    <%= f.check_box :starred %>
  </div>

  </br>      

  <div>
    <%= f.label :visible %> </br>
    <%= f.check_box :visible %>
  </div>

  </br>      

  <div>
  <%= f.label :tag %><br />
  <%= f.collection_select :tag_id, @tags, :id, :name, :prompt => "Select a Tag" %>
  </div>

  </br>      

  <div>
    <%= f.label :caption %></br>
    <%= f.text_area :caption, class: "caption"  %>
  </div>

  <div>
  </div>

  </br>      

  <div>
    <%= f.label :main_body %></br>
    <%= f.cktext_area :main_body %>
  </div>

  </br>

  <div>
    <%= f.label :main_image %></br>
    <%= f.file_field :main_image %>
    <%= f.hidden_field :main_image_cache %>
    </br>
    <%= image_tag(@post.main_image.index.url) if @post.main_image? %>
  </div>

  </br>      

  <div>
    <%= f.submit "Create Post", class: "btn btn-large btn-primary" %>
  </div>

<% end %>
</div>
