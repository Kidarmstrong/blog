<div class="container">
<ul class="list-group">
  <%= link_to root_path do %>
  <li class="list-group-item box_hover">Home</li>
<% end %>
  <%= link_to about_path do %>
  <li class="list-group-item">About</li>
<% end %>
  <%= link_to archive_path do %>
  <li class="list-group-item">Archive</li>
<% end %>
  <%= link_to ask_me_path do %>
  <li class="list-group-item">Ask Me</li>
<% end %>
  <li class="list-group-item">Gallery</li>
</ul>

<div class="panel panel-default">
  <div class="panel-heading">Starred Posts</div>
    <ul class="list-group">
    <% starred_posts.each do |post| %>
      <%= link_to(post) do %>
        <li class="list-group-item"><%= post.subject %></li>
      <% end %>
    <% end %>
    </ul>
</div>

<div class="panel panel-default">
  <div class="panel-heading">Archive</div>
  <ul class="list-group">
    <% get_months.each do |month| %>
      <%= link_to archive_path(:month => month.strftime('%B')) do %>
        <li class="list-group-item"><%= month.strftime('%B') %></li>
      <% end %>
    <% end %>
    </ul>
</div>

<div class="panel panel-default">
  <div class="panel-heading">Articles by Others</div>
    <ul class="list-group">
      <li class="list-group-item">Dog Blog</li>
      <li class="list-group-item">Teaching Bite</li>
    </ul>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Tags</h3>
  </div>
  <div class="panel-body">
    <button type="button" class="btn" style="margin: 4px; background-color: green; color: white;">Training</button> <!--Green--!>
    <button type="button" class="btn" style="margin: 4px; background-color: red; color: white;">Experience</button> <!--Red--!>
    <button type="button" class="btn" style="margin: 4px; background-color: yellow; color: white;">Socialising</button> <!--Yellow--!>
    <button type="button" class="btn" style="margin: 4px; background-color: blue; color: white;">Food</button> <!--Blue--!>
    <button type="button" class="btn" style="margin: 4px; background-color: orange; color: white;">Behaviour</button> <!--Orange--!>
    <button type="button" class="btn" style="margin: 4px; background-color: purple; color: white;">Days Out</button> <!--Purple--!>
  </div>
</div>
</div>
